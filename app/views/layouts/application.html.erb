<!DOCTYPE html>
<html>
  <head>
    <title>We're Engineer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="normalize.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

<body>
  <div class="header__contents">
    <div class="header__contents__box">
     <div class="header__contents__box--left">
      <a href="/" class="home">HOME</a>
      <% if user_signed_in? %>
        <div class="user_navi grid-6">
           <span class="nickname"><%= current_user.nickname %>
            <ul class="user__info">
              <li>
                <a href="/users/<%= current_user.id %>" class="mypage">My Page</a>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </span>
          <a class="post" href="/articles/new">New Post</a>
        </div>
      <% else %>
        <div class="grid-6">
          <%= link_to "ログイン", new_user_session_path, class: 'post' %>
          <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
        </div>
      <% end %>
      <a href="#" class="search">search</a><%# サーチボックスlink_to %>
     </div>
    </div>
   </div>
    <%= yield %>
  </body>
</html>